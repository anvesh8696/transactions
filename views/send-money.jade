extends layout

block content
  form#send-money
    .form-item
      label(for="to") To:
      input(id="to", type="text")

    .form-item
      label(for="amount") Amount:
      input(id="amount", type="text")
      select(id="currency")
        option(val="USD") USD
        option(val="EUR") EUR
        option(val="JPY") JPY

    .form-item
      textarea(id="message", placeholder="Message (optional):")

    p What's this payment for?
    .form-item
      label(for="family-friends") I'm sending money to family or friends
      input(id="family-friends", type="radio", name="payment-for", value="hey")
      label(for="goods-services") I'm paying for goods or services
      input(id="goods-services", type="radio", name="payment-for", value="hey")

    .form-actions
      input(id="reset", type="reset", value="Reset")
      input(id="submit", type="submit", value="Submit")

block footer
  a(href="#", class="btn") Clear
  a(href="#", class="btn") Next
